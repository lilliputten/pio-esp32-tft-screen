# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
insert_final_newline = true
charset = utf-8
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
indent_style = space
brace_style = attach

[*.{c++,cc,cpp,cxx,h,h++,hh,hpp,hxx,inl,ipp,tlh,tli}]
# @see https://learn.microsoft.com/en-us/visualstudio/ide/cpp-editorconfig-properties
cpp_indent_case_contents_when_block = true
cpp_new_line_before_open_brace_namespace = same_line
cpp_new_line_before_open_brace_block = same_line
cpp_namespace_declaration_braces = end_of_line

[*.{py,toml,wsgi}]
indent_size = 4

[*.json]
indent_size = 2

[.*rc]
indent_size = 2

[{bower,package}.json]
indent_size = 2

# Ignore paths
[{next/**,static/**,.vscode/launch.json,prisma/migrations/migration_lock.toml}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

